<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hp.mitsogo.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:background="@drawable/custom_layout"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="20dp">

        <ImageView
            android:id="@+id/img_battery"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_battery" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:paddingTop="10dp"
                android:text="Battery"
                android:textColor="@android:color/black"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/txt_btry_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp"
                android:paddingTop="10dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="0dp">

            <ProgressBar
                android:id="@+id/pb"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:paddingRight="30dp"
                android:paddingTop="30dp"
                android:progressDrawable="@drawable/progressbar_states" />

            <TextView
                android:id="@+id/tv_percentage"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_marginRight="0dp"
                android:paddingRight="25dp"
                android:paddingTop="30dp"
                android:textColor="#000"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/custom_layout_orange"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_device"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_device" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:paddingTop="10dp"
                android:text="Device"
                android:textColor="@android:color/black"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/txt_device_name"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:paddingLeft="60dp"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_device_os"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:paddingLeft="60dp" />

            <TextView
                android:id="@+id/txt_apiLevel"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:paddingLeft="60dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="225dp"
        android:background="@drawable/custom_layout_red"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_network"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_network" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:paddingTop="10dp"
                android:text="Network"
                android:textColor="@android:color/black"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_network_type"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:paddingLeft="35dp"
                    android:paddingRight="0dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_network" />

                <TextView
                    android:id="@+id/txt_net_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="0dp"
                    android:paddingTop="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_net_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="80dp"
                android:paddingTop="0dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="330dp"
        android:background="@drawable/custom_layout_purple"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_storage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_storage" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:paddingTop="10dp"
                android:text="Storage"
                android:textColor="@android:color/black"
                android:textSize="26sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_internal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="60dp"
                    android:text="Internal" />

                <TextView
                    android:id="@+id/txt_str_internal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_external"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="60dp"
                    android:text="External" />

                <TextView
                    android:id="@+id/txt_str_external"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="435dp"
        android:background="@drawable/custom_layout_blue"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_whether"
            android:layout_width="60dp"
            android:layout_height="75dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_whether" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_whether"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:paddingTop="10dp"
                android:text="Weather"
                android:textColor="@android:color/black"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp" />

            <TextView
                android:id="@+id/txt_heat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp" />
        </LinearLayout>
    </LinearLayout>

    </RelativeLayout>

</ScrollView>
